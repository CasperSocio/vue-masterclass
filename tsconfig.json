{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"importHelpers": true,
		"jsx": "preserve",
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "Node",
		"paths": {
			"@/*": ["src/*"]
		},
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2019",
		"types": [
			"vite/client"
		],
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		]
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/**/*.d.ts"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
